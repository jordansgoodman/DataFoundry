{
  "uid": "datafoundry-system",
  "title": "DataFoundry System Metrics",
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "10s",
  "tags": ["datafoundry", "metrics"],
  "time": {"from": "now-6h", "to": "now"},
  "panels": [
    {
      "type": "timeseries",
      "title": "CPU Usage %",
      "datasource": {"type": "prometheus", "uid": "-1"},
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
      "targets": [
        {
          "expr": "100 - (avg by (instance) (rate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Memory Usage %",
      "datasource": {"type": "prometheus", "uid": "-1"},
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
      "targets": [
        {
          "expr": "(1 - (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes)) * 100",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Disk Usage % (root)",
      "datasource": {"type": "prometheus", "uid": "-1"},
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
      "targets": [
        {
          "expr": "100 - (node_filesystem_avail_bytes{mountpoint=\"/\",fstype!~\"tmpfs|overlay\"} / node_filesystem_size_bytes{mountpoint=\"/\",fstype!~\"tmpfs|overlay\"} * 100)",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Network Receive (bytes/s)",
      "datasource": {"type": "prometheus", "uid": "-1"},
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
      "targets": [
        {
          "expr": "sum by (instance) (rate(node_network_receive_bytes_total{device!~\"lo\"}[5m]))",
          "refId": "A"
        }
      ]
    }
  ]
}
